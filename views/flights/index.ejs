<%- include('../partials/header') %>

<table id="list">
    <thead>
        <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Date</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td <% if (f.departs < curDate) { %> style="color: red" <% } %>><%= f.departs %></td>
                <td><button><a href="flights/<%= f._id %>">DETAILS</a></button></td>
            </tr>
        <% }) %>
    </tbody>
</table>


<%- include('../partials/footer') %>
